{
  "name": "Live Chat Overlay",
  "description": "Restyle the YouTube or Zoom popout chat so you can overlay it for livestreams",
  "manifest_version": 2,
  "version": "0.1.9",
  "homepage_url": "https://github.com/aaronpk/live-chat-overlay",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://studio.youtube.com/*",
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "storage"
  ],
  "content_scripts": [
    {
      "css": [
        "youtube.css"
      ],
      "js": [
        "jquery.js",
        "base.js",
        "youtube.js",
        "zoom.js"
      ],
      "matches": [
        "https://youtube.com/live_chat*",
        "https://www.youtube.com/live_chat*",
        "https://studio.youtube.com/live_chat*",
        "https://*.zoom.us/wc/*"
      ]
    }
  ],
  "options_ui": {
    "page": "settings/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "live-chat-overlay@aaronpk.tv",
      "strict_min_version": "80.0"
    }
  }
}
